@model Hard.App.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Product details";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <img src="~/images/@Model.Id/@Model.Image" style="width: 300px; height: 428px" alt="Alternate Text" />
    </div>
    <div class="col-md-6">
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>            
            <dt>
                @Model.Price.ToString("C"))
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Active)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Active)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Supplier)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Supplier.Name)
            </dd>
        </dl>
        <div>
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id" supress-by-claim-name="product" supress-by-claim-value="upadte">Edit</a>
            <a class="btn btn-secondary" href="javascript:window.history.back();">Back to List</a>
        </div>
    </div>    
</div>

