@model Hard.App.ViewModels.SupplierViewModel

@{
    ViewData["Title"] = "Update address";
}

<div class="modal-header">
    <h4 class="modal-title">@ViewData["Title"]</h4>
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">x</span><span class="sr-only">Fechar</span>
    </button>
</div>

<form asp-action="UpdateAddress" method="post">
    <div class="modal-body">
        <input type="hidden" asp-for="Address.Id" />
        <input type="hidden" asp-for="Address.SupplierId" />

        <partial name="_Address">

            <div class="modal-footer">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-success" />
                    <input type="button" value="Close" class="btn btn-info" data-dismiss="modal" />
                </div>
            </div>
    </div>
</form>


<script>SearchZipCode();</script>
